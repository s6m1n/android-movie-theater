<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2024.05.07" />

        <TextView
            android:id="@+id/tv_divider_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="|"
            app:layout_constraintStart_toEndOf="@id/tv_history_date"
            app:layout_constraintTop_toTopOf="@id/tv_history_date" />

        <TextView
            android:id="@+id/tv_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_divider_1"
            app:layout_constraintTop_toTopOf="@id/tv_history_date"
            tools:text="17:00" />

        <TextView
            android:id="@+id/tv_divider_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="|"
            app:layout_constraintStart_toEndOf="@id/tv_history_time"
            app:layout_constraintTop_toTopOf="@id/tv_history_date" />

        <TextView
            android:id="@+id/tv_history_theater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_divider_2"
            app:layout_constraintTop_toTopOf="@id/tv_history_date"
            tools:text="2024.05.07" />

        <TextView
            android:id="@+id/tv_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="13dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_history_date"
            app:layout_constraintTop_toBottomOf="@id/tv_history_date"
            app:layout_goneMarginBottom="12dp"
            tools:text="해리 포터와 마법사의 돌" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>